{
  "name": "squid",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "db:generate": "npx squid-typeorm-codegen",
    "db:migrate": "npx squid-typeorm-migration apply",
    "db:revert": "npx squid-typeorm-migration revert",
    "db:create": "npx squid-typeorm-migration create",
    "db:clean": "rm -rf db/migrations/*",
    "codegen": "npx squid-substrate-typegen typegen.json",
    "gen:decoder": "node scripts/gen-ink-decoder.js",
    "gen:decoders": "node scripts/gen-ink-decoder.js --config ink-contracts.json",
    "processor": "node -r dotenv/config lib/main.js",
    "serve": "npx @subsquid/graphql-server"
  },
  "dependencies": {
    "@polkadot/util": "^13.5.7",
    "@polkadot/util-crypto": "^13.5.7",
    "@subsquid/big-decimal": "^1.0.0",
    "@subsquid/graphql-server": "^4.6.0",
    "@subsquid/ss58": "^2.0.2",
    "@subsquid/substrate-processor": "^8.6.1",
    "@subsquid/substrate-runtime": "^2.0.1",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "dotenv": "^16.4.5",
    "pg": "8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@subsquid/ink-typegen": "^3.1.0",
    "@subsquid/substrate-metadata-explorer": "^3.1.2",
    "@subsquid/substrate-typegen": "^8.1.0",
    "@subsquid/typeorm-codegen": "^2.0.1",
    "@types/node": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "packageManager": "yarn@4.10.3"
}
